<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dialog_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="?attr/blackTextColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/dialog_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="?attr/veryDarkGrayColor"
                android:textSize="14sp"
                tools:text="Message" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/press_effect_background"
            android:gravity="center"
            android:visibility="gone"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_ll">

            <TextView
                android:id="@+id/dialog_footer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_ok"
                android:textAlignment="center"
                android:textColor="?attr/blackTextColor"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/press_effect_background"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:layout_marginTop="14dp"
            app:layout_constraintBottom_toTopOf="@id/dialog_ll_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_ll">

            <TextView
                android:id="@+id/dialog_logout_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="?attr/blueColor"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/press_effect_background"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:visibility="gone"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_ll_2">

            <TextView
                android:id="@+id/dialog_cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textColor="?attr/blackTextColor"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>