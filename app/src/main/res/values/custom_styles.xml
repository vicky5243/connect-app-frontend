<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_logo">
        <item name="android:fontFamily">@font/yesteryear</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/blackTextColor</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">?attr/blackTextColor</item>
        <item name="android:textColorHint">?attr/darkGrayColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="blueButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="grayButton">
        <item name="android:background">@drawable/gray_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/blackTextColor</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>