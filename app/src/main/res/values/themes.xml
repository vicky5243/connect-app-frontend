<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Connect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF238EE1</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="blackTextColor">@color/black</item>
        <item name="whiteBgColor">@color/white</item>
        <item name="lightWhiteBgColor">@color/white</item>

        <item name="lightBlueColor">#FF73C5EA</item>
        <item name="blueColor">#FF238EE1</item>
        <item name="darkBlueColor">#FF004073</item>

        <item name="veryLightGrayColor">#FFFAFAFA</item>
        <item name="lightGrayColor">#FFE6E6E6</item>
        <item name="grayColor">#FFDFDFDF</item>
        <item name="darkGrayColor">#FFAAAAAA</item>
        <item name="veryDarkGrayColor">#FF6A6A6A</item>
    </style>
</resources>